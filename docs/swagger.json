{
  "openapi": "3.0.0",
  "info": {
    "title": "Preducation API",
    "description": "This is Preducation API's",
    "version": "1.0.0"
    },
    "tags": [
      {
        "name": "Auths",
        "description": "API Auths"
      }
    ],
  "paths": {
    "/api/v1/auths/register": {
      "post": {
        "tags": ["Auths"],
        "summary": "User registration",
        "requestBody": {
          "description": "Request body for user registration",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "john.doe@example.com"
                  },
                  "phone": {
                    "type": "string",
                    "example": "123-456-7890"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123"
                  }
                },
                "required": ["name", "email", "phone", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Register successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Register successfully"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "_id": {
                          "type": "string",
                          "example": "65649ca76256c5cf928a6026"
                        },
                        "name": {
                          "type": "string",
                          "example": "John Doe"
                        },
                        "phone": {
                          "type": "string",
                          "example": "123-456-7890"
                        },
                        "role": {
                          "type": "string",
                          "example": "user"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Validation error or duplicate email/phone",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "status": "Failed",
                  "message": "Email address or phone number already registered"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "status": "Failed",
                  "message": "Internal Server Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auths/login": {
      "post": {
        "tags": ["Auths"],
        "summary": "User login",
        "requestBody": {
          "description": "Request body for user login",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "identifier": {
                    "type": "string",
                    "example": "user1@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123"
                  }
                },
                "required": ["identifier", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Login successfully"
                    },
                    "data": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJfaWQiOiI2NTY0OWNhNzYyNTZjNWNmOTI4YTYwMjYiLCJlbWFpbCI6InVzZXIxQGV4YW1wbGUuY29tIiwicGhvbmUiOiIxMjMtNDU2LTc4OTAiLCJyb2xlIjoidXNlciIsImlhdCI6MTcwMTA5ODMzMCwiZXhwIjoxNzAxMzU3NTMwfQ.tsNXrKdRMbDv12-T5jVyebRS2RCKQ0CXmxppR7fRDbU"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid credentials or wrong password.",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "status": "Failed",
                  "message": "Sorry, wrong password"
                }
              }
            }
          },
          "404": {
            "description": "Email address or phone not registered.",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "status": "Failed",
                  "message": "Email address or Phone not registered"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auths/logout": {
      "delete": {
        "tags": ["Auths"],
        "summary": "User logout",
        "responses": {
          "200": {
            "description": "Logout Successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Success logout"
                    }
                  }
                }
              }
            }
          },
          "204": {
            "description": "No Content - Successful logout"
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "status": "Failed",
                  "message": "Internal Server Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auths/forgot-password": {
      "post": {
        "tags": ["Auths"],
        "summary": "Forgot Password",
        "requestBody": {
          "description": "Request body for resetting password",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "user1@example.com"
                  }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email reset password link sent successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Email reset password has been sent"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Validation error or user not found",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "status": "Failed",
                  "message": "User not found"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "status": "Failed",
                  "message": "Internal Server Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auths/email-otp": {
      "post": {
        "tags": ["Auths"],
        "summary": "Send OTP for email verification",
        "requestBody": {
          "description": "Request body for sending OTP for email verification",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "user1@example.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OTP sent successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "OTP verification sent successfully"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "status": "Failed",
                  "message": "Internal Server Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auths/reset-password/{token}": {
      "patch": {
        "tags": ["Auths"],
        "summary": "Reset Password",
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "description": "Password reset token",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Request body for resetting password",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string",
                    "example": "newpassword123"
                  },
                  "confirmPassword": {
                    "type": "string",
                    "example": "newpassword123"
                  }
                },
                "required": ["password", "confirmPassword"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Reset password successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Reset password successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Validation error or expired token",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "status": "Failed",
                  "message": "Password reset token already expired"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "status": "Failed",
                  "message": "Internal Server Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auths/admin/login": {
      "post": {
        "tags": ["Auths"],
        "summary": "Admin login",
        "requestBody": {
          "description": "Request body for admin login",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "admin_user"
                  },
                  "password": {
                    "type": "string",
                    "example": "adminpass"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Login successfully"
                    },
                    "data": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJfaWQiOiI2NTY0OWNhNzYyNTZjNWNmOTI4YTYwMjYiLCJlbWFpbCI6InVzZXIxQGV4YW1wbGUuY29tIiwicGhvbmUiOiIxMjMtNDU2LTc4OTAiLCJyb2xlIjoiYWRtaW4iLCJpYXQiOjE3MDEwOTgzMzAsImV4cCI6MTcwMTM1NzUzMH0.tsNXrKdRMbDv12-T5jVyebRS2RCKQ0CXmxppR7fRDbU"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid credentials or insufficient permissions.",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "status": "Failed",
                  "message": "Wrong password or username"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - Insufficient permissions",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "status": "Failed",
                  "message": "You don't have permission to login as admin"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auths/verify-otp": {
      "post": {
        "tags": ["Auths"],
        "summary": "Verify OTP",
        "description": "Verify OTP code for email verification",
        "requestBody": {
          "description": "Request body for verifying OTP",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "otp": {
                    "type": "string",
                    "example": "123456"
                  }
                },
                "required": ["otp"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OTP verification successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Verify OTP successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid OTP or expired",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "status": "Failed",
                  "message": "Sorry, OTP code is wrong or expired"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "status": "Failed",
                  "message": "Internal Server Error"
                }
              }
            }
          }
        }
      }
    }
  }
}
